<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="form-group">
			<div class="col-sm-12">
				<g:TextBox styleName="form-control" ui:field="chapter" />
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-12">
				<g:RichTextArea styleName="form-control" ui:field="content"
					height="300px" text="Content of Chapter" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 